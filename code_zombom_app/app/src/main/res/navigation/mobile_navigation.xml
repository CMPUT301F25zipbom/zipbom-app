<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.code_zombom_app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_entrantEventListFragment"
            app:destination="@id/entrantEventListFragment" />
        <action
            android:id="@+id/action_home_to_events_graph"
            app:destination="@id/org_graph" />
    </fragment>

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.code_zombom_app.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.code_zombom_app.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/entrantEventListFragment"
        android:name="com.example.code_zombom_app.EntrantEventListFragment"
        android:label="@string/entrant_event_catalog_title"
        tools:layout="@layout/fragment_entrant_event_list" />

    <!-- Nest Nav_graph into mobile_navigation -->
    <include app:graph="@navigation/organizer_graph" />
</navigation>
