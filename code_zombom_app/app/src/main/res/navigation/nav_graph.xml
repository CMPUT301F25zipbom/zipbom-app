<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/organizerMainFragment">

    <fragment
        android:id="@+id/organizerMainFragment"
        android:name="com.example.code_zombom_app.OrganizerMainFragment"
        android:label="fragment_organizer_main"
        tools:layout="@layout/fragment_organizer_main" >

        <!-- This action defines the path TO the AddEventFragment -->
        <action
            android:id="@+id/action_organizerMainFragment_to_addEventFragment"
            app:destination="@id/addEventFragment" />
    </fragment>

    <fragment
        android:id="@+id/addEventFragment"
        android:name="com.example.code_zombom_app.AddEventFragment"
        android:label="fragment_add_event"
        tools:layout="@layout/fragment_add_event" />

</navigation>