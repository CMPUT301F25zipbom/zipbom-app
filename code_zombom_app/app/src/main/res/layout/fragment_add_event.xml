<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#49317C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#2E2E2E"
            android:text="@string/cancel"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_name"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editTextMaxPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/max_amount_of_people"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="12dp" />

        <!-- Start Date (Scroll Wheel Picker) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <DatePicker
            android:id="@+id/datePickerStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            android:layout_marginBottom="16dp"
            android:theme="@style/DatePickerWhiteText" />

        <!-- Deadline Date (Scroll Wheel Picker) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_date"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="4dp" />

        <DatePicker
            android:id="@+id/datePickerDeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:calendarViewShown="false"
            android:spinnersShown="true"
            android:layout_marginBottom="16dp"
            android:theme="@style/DatePickerWhiteText"/>

        <Spinner
            android:id="@+id/spinnerGenre"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_autoComplete_event_address"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/maxamountofentrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Waitlist Max (optional)"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description (optional)"
            android:inputType="textMultiLine"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonUploadPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Poster"
            android:backgroundTint="#2E2E2E"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/saveEventButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:backgroundTint="#2E2E2E"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
