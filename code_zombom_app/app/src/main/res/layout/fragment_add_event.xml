<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#49317C">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#2E2E2E"
            android:text="@string/cancel"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/event_name"
            android:inputType="text"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editTextMaxPeople"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/max_amount_of_people"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_date"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#7C4DFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textStartDatePrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mon, Dec 1"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textStartDateSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="December 2025"
                    android:textColor="#F3E8FF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/tap_to_select_date"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/end_date"
            android:textColor="@android:color/white"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#7C4DFF"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textEndDatePrimary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tue, Dec 2"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textEndDateSecondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="December 2025"
                    android:textColor="#F3E8FF"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="@string/tap_to_select_date"
                    android:textColor="#E0E0E0"
                    android:textSize="12sp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <Spinner
            android:id="@+id/spinnerGenre"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_autoComplete_event_address"
            android:name="com.google.android.libraries.places.widget.AutocompleteSupportFragment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="12dp"/>

        <EditText
            android:id="@+id/maxamountofentrants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Waitlist Max (optional)"
            android:inputType="number"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/editTextDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description (optional)"
            android:inputType="textMultiLine"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/buttonUploadPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Poster"
            android:backgroundTint="#2E2E2E"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="12dp" />

        <ImageView
            android:id="@+id/imagePreview"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:visibility="gone"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/saveEventButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:backgroundTint="#2E2E2E"
            android:textColor="#FFFFFF"
            android:textColorHint="#BCBCBC"
            android:layout_marginBottom="24dp" />

    </LinearLayout>

</ScrollView>
