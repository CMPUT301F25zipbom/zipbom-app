<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:orientation="vertical"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"> <!-- Adds a ripple effect on click -->

    <TextView
        android:id="@+id/event_item_textview"
        android:layout_width="381dp"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:text="Event Details Here..."
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/event_qr_code_imageview"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:contentDescription="Event QR Code"
        android:visibility="gone" />
</LinearLayout>
