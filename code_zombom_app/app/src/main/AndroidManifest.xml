<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 'maxSdkVersion' ensures this permission is only requested on older devices where it's needed -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!--
      This tells the system that the app intends to interact with
      other apps that can handle the ACTION_GET_CONTENT or
      ACTION_OPEN_DOCUMENT intents, like the system's file picker.
    -->
    <queries>
        <intent>
            <action android:name="android.intent.action.GET_CONTENT" />
            <data android:mimeType="*/*" />
        </intent>
        <intent>
            <action android:name="android.intent.action.OPEN_DOCUMENT" />
            <data android:mimeType="*/*" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Code_zombom_app">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Login.LoginActivity"/>
        <activity android:name=".Login.SignUp.SignUpActivity"/>
        <activity android:name=".Entrant.EntrantMainActivity"/>
        <activity android:name=".FilterSortActivity"
            android:exported="false" />
        <activity android:name=".Entrant.EditProfile.EditProfileActivity"/>
        <activity android:name=".Login.SignUp.SignUpAddress.SignUpAddressActivity"/>

    </application>

</manifest>
